<mujoco>
    <option gravity="0 0 0" timestep="0.1"/>
    <worldbody>
        <light diffuse="1 1 1" pos="0 0 3" dir="0 0 -1" mode="trackcom" target="ball" />
        <geom name='floor' pos='0 0 -0.4' size='5 5 .125' type='plane' condim='3'/>    
        <body name="ball" pos="0 0 0">
            <joint axis="1 0 0" damping="0" name="slide0" pos="0 0 0" type="slide"/>
            <joint axis="0 1 0" damping="0" name="slide1" pos="0 0 0" type="slide"/>
            <joint axis="0 0 1" damping="0" name="slide2" pos="0 0 0" type="slide"/>
            <geom type="sphere" size="0.4" mass="1" rgba="0 .9 0 1"/>
        </body>
    </worldbody>
    <actuator>
        <motor gear="1" joint="slide0"/>
        <motor gear="1" joint="slide1"/>
        <motor gear="1" joint="slide2"/>
    </actuator>
</mujoco>
